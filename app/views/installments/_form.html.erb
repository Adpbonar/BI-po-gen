
<%= simple_form_for(@installment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
  <label>Due Date</label>
  <%= f.text_field :due_date, class: 'flatpickr form-control', placeholder: 'select the due date', data: { controller: "flatpickr", flatpickr_min_date: @installment.po.start_date, flatpickr_enable_time: false, flatpickr_date_format: "Y-m-d", flatpickr_disable_days_of_week: [0,6] }  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
