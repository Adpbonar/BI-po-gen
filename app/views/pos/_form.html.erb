<%= simple_form_for @po do |f| %>
  <% if @po.errors.any? %>
    <div id="error_explanation">
     The following errors prevented this PO from saving
      <ul>
      <% @po.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
      Please refresh the page and resubmit
    </div>
  <% end %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :company_name %>
  <%= f.input :tax_amount %>
  <label>Start Date</label>  
  <%= f.text_field :start_date, class: 'flatpickr', placeholder: 'select the start date', data: { behavior: "flatpickr" } %>
  <label>End Date</label>
  <%= f.text_field :end_date, class: 'flatpickr', placeholder: 'select the end date', data: { behavior: "flatpickr" } %>
  <%= f.input :service_type, as: :select, collection: Po::TYPE, label: 'Service Type' %>
  <br /><hr />
  Learning Coordinator <%= f.collection_select :learning_coordinator, Associate.all.order([:id]), :id, :name %>&nbsp; &nbsp; |&nbsp; &nbsp; Bill To <%= f.collection_select :learning_coordinator, Client.all.order([:id]), :id, :name %>
  <div><%= f.submit class: 'btn btn-primary' %></div>
<% end %>