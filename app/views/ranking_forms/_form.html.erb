<%= simple_form_for @ranking_form,  html: { autocomplete: 'off'}  do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <br />
    <%= f.input :access_code, as: :tel %>
  </div>
  <br />
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success', style: "border-radius: 0", data: { "disable-with": "Error: please reload page..." } %>
  </div>
<% end %>
