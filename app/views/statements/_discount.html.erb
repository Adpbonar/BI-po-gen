<%= turbo_frame_tag dom_id(discount) do %>
    <div>
        <% if discount.amount_type == 0 %>
            <%= sanitized_show_money(discount.line_item.statement, (discount.line_item.cost * ("0." + (discount.amount).to_s).to_f), "") %>  off (<%= discount.amount %>%)
        <% else %>
            <%= sanitized_show_money(discount.line_item.statement, discount.amount, "") %> off
        <% end %>
        
        
    </div>
<% end %>